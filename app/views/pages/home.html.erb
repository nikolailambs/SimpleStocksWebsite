    <div class="box img-1" scrollSpeed="1">
      <%= cl_image_tag("simpleStocks/XMLID_353.1-1", class: "iphone-image") %>
    </div>
    <div class="box img-2" scrollSpeed="2">
      <%= cl_image_tag("simpleStocks/XMLID_353.1-2", class: "iphone-image") %>
    </div>
    <div class="box img-3" scrollSpeed="1.5"> <!-- list screen pic -->
      <%= cl_image_tag("simpleStocks/XMLID_353.1", class: "iphone-image") %>
    </div>
    <div class="box img-4" scrollSpeed="2"> <!-- stock profile info pic -->
      <%= cl_image_tag("simpleStocks/XMLID_353.1-4", class: "iphone-image") %>
