      <%= cl_image_tag("simpleStocks/XMLID_353.1-6", class: "iphone-image") %>
    </div>
    <div class="box img-6" scrollSpeed="1.5"> <!-- crypto coin image -->
      <%= cl_image_tag("simpleStocks/XMLID_353.1-5", class: "iphone-image") %>
